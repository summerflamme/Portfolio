---
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="A propos de moi" description="Ma présentation perso">
	<div class="stack gap-20 first-section">
		<main class="wrapper about">
			<Hero
				title="A propos de moi"
				tagline=""
			>
				<div class="flex justify-center">
				<img
					width="700"
					height="400"
					src="/assets/at-work.webp"
					alt="Jeanine White at work with a colleague"
				/>
				</div>
			</Hero>

			<section>
				<h2 class="section-title">Mon parcours Scolaire</h2>
				<div class="content">
					<div class="timeline">
						<div class="timeline-item">
							<span class="year-badge">2023 - 2026</span>
							<div class="education-card">
								<h3>BUT Informatique</h3>
								<p class="school">IUT Blagnac, Toulouse</p>
							</div>
						</div>
						<div class="timeline-item">
							<span class="year-badge">2021 - 2023</span>
							<div class="education-card">
								<h3>Baccalauréat STI2D</h3>
								<p class="school">Lycée polyvalent Stephane Hessel, Toulouse</p>
								<p class="mention">Mention Assez Bien</p>
							</div>
						</div>
					</div>
				</div>
			</section>
			<section>
				<h2 class="section-title">Parcours Professionnel</h2>
				<div class="content">
					<span class="year-badge"> 03/2025 - 05/2025</span>
					<div class="education-card">
						<h3>Stage développeur web / logiciel</h3>
						<p class="school">Handy Sitter</p>
						<p class="mention">Mise à jour de leur site internet, création d'une application de gestion bureautique.</p>
					</div>
				</div>
			</section>
			<section>
				<h2 class="section-title">Hard Skills</h2>
				<div class="content">
					<h3>Langages</h3>
						<img src="../../public/assets/java.webp"/>
						<img src="../../public/assets/php.webp"/>
						<img src="../../public/assets/ts.webp"/>
					<br><br>
					<h3>Framework</h3>
						<img src="../../public/assets/spring-boot.webp"/>
						<img src="../../public/assets/symfony.webp"/>
						<img src="../../public/assets/react.webp"/>
						<img src="../../public/assets/vue.webp"/>
					<h3>Base de données</h3>
						<img src="../../public/assets/postgre.webp"/>
						<img src="../../public/assets/mysql.webp"/>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}

	.education-card {
		background: var(--gray-700);
		border-radius: 1rem;
		padding: 2rem;
		margin-bottom: 1.5rem;
		box-shadow: var(--shadow-md);
		position: relative;
	}


	.year-badge {
		display: inline-block;
		background: var(--accent-regular);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 2rem;
		font-weight: bold;
		font-size: var(--text-sm);
		margin-bottom: 1rem;
		position: relative;
	}


	.year-badge::before {
		content: '';
		position: absolute;
		left: -2.5rem;
		top: 50%;
		transform: translateY(-50%);
		width: 18px;
		height: 18px;
		border-radius: 50%;
		background: white;
		border: 4px solid var(--gray-999);
		z-index: 1;
	}

	.education-card h3 {
		font-size: var(--text-xl);
		color: var(--gray-0);
		margin: 0.5rem 0;
	}

	.education-card .school {
		color: var(--gray-200);
		margin: 0.5rem 0;
		font-size: var(--text-base);
	}

	.education-card .mention {
		color: var(--gray-400);
		font-weight: 600;
		margin-top: 0.5rem;
	}
	.timeline {
		position: relative;
		padding-left: 2.1rem;
	}
	.timeline::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 3px;
		background: var(--accent-regular);
	}

	.timeline-item {
		position: relative;
		margin-bottom: 2rem;
	}


</style>
